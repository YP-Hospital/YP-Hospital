<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mary.hospital.Action.Login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/login"
        android:ems="10"
        android:id="@+id/loginLoginEditText"
        android:inputType="text"
        android:layout_above="@+id/registrationPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registrationPasswordEditText"
        android:layout_alignEnd="@+id/registrationPasswordEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registrationPasswordEditText"
        android:hint="@string/prompt_password"
        android:layout_above="@+id/loginSingInButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in_short"
        android:id="@+id/loginSingInButton"
        android:onClick="signIn"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/registrationPasswordEditText"
        android:layout_alignEnd="@+id/registrationPasswordEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:id="@+id/loginRegistrationButton"
        android:onClick="registration"
        android:layout_toLeftOf="@+id/loginSingInButton"
        android:layout_toStartOf="@+id/loginSingInButton"
        android:layout_alignTop="@+id/loginSingInButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginImageView"
        android:src="@mipmap/hospital"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/loginLoginEditText"
        android:layout_alignRight="@+id/loginLoginEditText"
        android:layout_alignEnd="@+id/loginLoginEditText" />

</RelativeLayout>
